{
  "compilerOptions": {
    "lib": ["es2019", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["nodes/**/*", "credentials/**/*"],
  "exclude": ["node_modules/**/*", "**/*.spec.ts"]
} 